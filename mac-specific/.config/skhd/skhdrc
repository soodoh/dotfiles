# Open Terminal
meh - return : open -a "Kitty"
hyper - return : open -a "Arc"

# Navigation
meh - h : yabai -m window --focus west
meh - j : yabai -m window --focus south
meh - k : yabai -m window --focus north
meh - l : yabai -m window --focus east

# Moving windows
hyper - h : yabai -m window --warp west
hyper - j : yabai -m window --warp south
hyper - k : yabai -m window --warp north
hyper - l: yabai -m window --warp east

# Float / Unfloat window
meh - space : yabai -m window --toggle float

# Make window native fullscreen
meh - f         : yabai -m window --toggle zoom-fullscreen
hyper - f : yabai -m window --toggle native-fullscreen

# Toggle window split type
meh - v : yabai -m window --toggle split

# Equalize window sizes
meh - r : yabai -m space --balance

# Move focused window to specific workspace
hyper - y : yabai -m window --space 1 --focus
hyper - u : yabai -m window --space 2 --focus
hyper - i : yabai -m window --space 3 --focus
hyper - o : yabai -m window --space 4 --focus

# Second monitor
# 0x27 is hex for apostrophe character
hyper - p : yabai -m window --display 1
hyper - 0x27 : yabai -m window --display 2
meh - p : yabai -m display --focus 1
meh - 0x27 : yabai -m display --focus 2
